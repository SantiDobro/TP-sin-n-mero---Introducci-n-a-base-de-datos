@{
    ViewData["Title"] = "Inicio";
}

<div class="main-container">
    @if (Model != null)
    {
        <div class="card perfil-card">
            <h2>Bienvenido, <span class="highlight">@Model.Usuario</span> 👋</h2>
            <ul class="info-list">
                <li><strong>Género:</strong> @Model.Genero</li>
                <li><strong>Color favorito:</strong> @Model.Color</li>
                <li><strong>Equipo:</strong> @Model.Equipo</li>
                <li><strong>País:</strong> @Model.Pais</li>
                <li><strong>Teléfono:</strong> @Model.Telefono</li>
            </ul>
            <a href="@Url.Action("CerrarSesion", "Home")" class="btn">Cerrar sesión</a>
        </div>
    }
    else
    {
        <div class="card">
            <h2>No has iniciado sesión</h2>
            <p>Para ver tu perfil, primero iniciá sesión.</p>
            <a href="@Url.Action("IniciarSesion", "Home")" class="btn">Iniciar sesión</a>
        </div>
    }
</div>